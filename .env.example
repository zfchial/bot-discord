# Token bot Discord
DISCORD_TOKEN=
# ID aplikasi (client) bot dari portal Discord
CLIENT_ID=

# Opsional: ID guild khusus untuk pendaftaran slash command cepat
# Kosongkan jika mau mendaftarkan global
GUILD_ID=

# ID channel teks tempat bot mengirim notifikasi
CHANNEL_ID=

# Interval pemeriksaan (menit)
