# Banyaknya item per halaman saat memanggil Jikan
LIST_PER_PAGE=1

# Endpoint API Jikan (ubah jika memakai mirror)
JIKAN_BASE=https://api.jikan.moe/v4

# ID genre Girls Love di Jikan (default 26)
JIKAN_GENRE_ID=26

# Lokasi file state JSON
STATE_FILE=./data/state.json
